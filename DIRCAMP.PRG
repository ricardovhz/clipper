PUBLIC SAVE_COLOR

SAVE_COLOR = "W\N,W/N,N,,,W/N"

#INCLUDE "BOX.CH"
#INCLUDE "SETCURS.CH"
#STDOUT Compilando meu arquivo...

SET CURSOR OFF
SET CONFIRM ON

SAVE SCREEN
SETCOLOR("W+/B,N/W,B,N/W")
CLEAR
SETCOLOR("W+/BG")
@ 05,10,15,50 BOX B_DOUBLE+CHR(32)
@ 06,12 SAY "Escreva o nome do arquivo DBF, DBT"
NOCAMP = SPACE(8)
SETCOLOR("R/BG,N/GR,,,N/GR")
SETCURSOR( SC_SPECIAL1 )
@ 07,12 GET NOCAMP PICTURE "@!"
READ
IF FILE( NOCAMP )
   USE (NOCAMP) NEW
ELSE
   SETCOLOR("N/B")
   @ 24,00 SAY "Esse arquivo .DBF n„o existe!"
   INKEY(0)
   SETCOLOR( SAVE_COLOR )
   CLS
   RESTORE SCREEN
   RETURN NIL
ENDIF
DECLARE CAMPQ[FCOUNT()]
AFIELDS( CAMPQ )
ACHOICE( 09,12,14,48,CAMPQ )
SETCOLOR( SAVE_COLOR )
CLS
RESTORE SCREEN
RETURN NIL
