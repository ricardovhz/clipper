cNumero := STR( nNumero,6,2 );
nCnt    := 0

FOR nCnt := 1 TO LEN( cNumero )
    *
    cByte := SUBS( cNumero,nCnt,1 )
    BigNum( cByte, nCnt )
NEXT




FUNCTION BigNum( x,y )

Local nCol

DO CASE
   CASE y = 1
        nCol := 2
   CASE y = 2
        nCol := 9
   CASE y = 3
        nCol := 16
   CASE y = 4
        nCol := 23
   CASE y = 5
        nCol := 26
   CASE y = 6
        nCol := 33
ENDCASE

DO CASE
   CASE x = "1"
      @ 18, nCol Say "  лл  "
      @ 19, nCol Say " п л  "
      @ 20, nCol Say "   л  "
      @ 21, nCol Say "   л  "
      @ 22, nCol Say " ллллл"
   CASE x = "2"
      @ 18, nCol Say "лллллл"
      @ 19, nCol Say "     л"
      @ 20, nCol Say "лллллл"
      @ 21, nCol Say "л     "
      @ 22, nCol Say "лллллл"
   CASE x = "3"
      @ 18, nCol Say "лллллл"
      @ 19, nCol Say "     л"
      @ 20, nCol Say " ллллл"
      @ 21, nCol Say "     л"
      @ 22, nCol Say "лллллл"
   CASE x = "4"
      @ 18, nCol Say "л    л"
      @ 19, nCol Say "л    л"
      @ 20, nCol Say "лллллл"
      @ 21, nCol Say "     л"
      @ 22, nCol Say "     л"
   CASE x = "5"
      @ 18, nCol Say "лллллл"
      @ 19, nCol Say "л     "
      @ 20, nCol Say "лллллл"
      @ 21, nCol Say "     л"
      @ 22, nCol Say "лллллл"
   CASE x = "6"
      @ 18, nCol Say "лллллл"
      @ 19, nCol Say "л     "
      @ 20, nCol Say "лллллл"
      @ 21, nCol Say "л    л"
      @ 22, nCol Say "лллллл"
   CASE x = "7"
      @ 18, nCol Say "лллллл"
      @ 19, nCol Say "     л"
      @ 20, nCol Say "    л "
      @ 21, nCol Say "   л  "
      @ 22, nCol Say "  л   "
   CASE x = "8"
      @ 18, nCol Say "лллллл"
      @ 19, nCol Say "л    л"
      @ 20, nCol Say "лллллл"
      @ 21, nCol Say "л    л"
      @ 22, nCol Say "лллллл"
   CASE x = "9"
      @ 18, nCol Say "лллллл"
      @ 19, nCol Say "л    л"
      @ 20, nCol Say "лллллл"
      @ 21, nCol Say "     л"
      @ 22, nCol Say "лллллл"
   CASE x = "0"
      @ 18, nCol Say "лллллл"
      @ 19, nCol Say "л  лпл"
      @ 20, nCol Say "л л  л"
      @ 21, nCol Say "лл   л"
      @ 22, nCol Say "лллллл"
   CASE x = "1"
      @ 22, 23   Say "лл"
      @ 23, 23   Say " п"
ENDCASE

Return NIL

